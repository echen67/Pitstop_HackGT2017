<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackgt2017.pitstop.Truck1Activity">

    <TextView
        android:text="Choose an item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseView"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseView"
        android:layout_marginTop="30dp"
        android:id="@+id/spinnerItem" />

    <TextView
        android:text="How many do you want?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityView"
        android:textSize="20sp"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/spinnerItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/quantityEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a quantity"
        android:layout_marginTop="30dp"
        android:layout_below="@id/quantityView" />

    <info.hoang8f.widget.FButton
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitOrderButton"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/quantityEdit"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
