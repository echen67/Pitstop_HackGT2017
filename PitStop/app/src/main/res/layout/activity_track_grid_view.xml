<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackgt2017.pitstop.TrackGridView">


    <TextView
        android:text="Track Info"
        android:id="@+id/trackInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelGridView"
        android:layout_alignBottom="@+id/cancelGridView"
        android:textSize="26sp"
        android:height= "50dp"
        android:layout_margin="10dp"
        android:layout_alignStart="@+id/gridview" />

    <info.hoang8f.widget.FButton
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelGridView"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        fbutton:buttonColor="#039BE5"
        fbutton:shadowColor="#0277bd"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/gridview" />

    <TextView
        android:text="TestShowPurpose"
        android:id="@+id/testShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textSize="26sp"
        android:layout_below="@+id/cancelGridView"
        android:layout_centerHorizontal="true" />


    <GridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:columnWidth="90dp"
        android:layout_below="@id/testShow"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:numColumns="3"
        android:verticalSpacing="24dp"
        android:horizontalSpacing="10dp"
        android:background="#c7dac0"
        android:layout_alignParentStart="true" />




</RelativeLayout>