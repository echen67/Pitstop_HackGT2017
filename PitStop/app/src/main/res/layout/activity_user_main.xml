<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    tools:context="hackgt2017.pitstop.UserMainActivity">



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:background="@drawable/truck3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/profileButton"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/gifImageView"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <info.hoang8f.widget.FButton
        android:text="Check Track"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:background="@drawable/button_shape"
        android:id="@+id/checkTrackButton"
        android:fontFamily="sans-serif-light"
        android:minWidth="90dip"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#FFF"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/profileButton"
        android:layout_alignBottom="@+id/profileButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp"
        tools:ignore="HardcodedText" />

    <info.hoang8f.widget.FButton
        android:text="Logout"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        android:id="@+id/cancelUserMain"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_alignTop="@+id/listOrderReports"
        android:layout_alignStart="@+id/profileButton"
        tools:ignore="HardcodedText" />

    <info.hoang8f.widget.FButton
        android:text="View Order"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:id="@+id/listOrderReports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:minWidth="90dip"
        android:width="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/checkTrackButton"
        android:layout_alignStart="@+id/checkTrackButton"
        tools:ignore="HardcodedText" />


</RelativeLayout>